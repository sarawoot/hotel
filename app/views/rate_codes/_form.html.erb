<%= simple_nested_form_for(@rate_code, :html => {:class => 'form-horizontal' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :used, :wrapper => :append   do %>
      <%= f.check_box :used, {},'1','0'  %>
    <% end %>
    <%= f.input :name %>
    <%= link_to_add_fields("#{t("html.add")}", f, :rate_code_details, "new-rate-fields", :class => "btn") %><br /><br />
    <%= render('rate_detail', :f => f) %>
  </div>
  <div class="form-actions">
    <%= f.submit (@rate_code.new_record? ? "#{t "html.save"}"  : "#{t "html.update"}" ), class: "btn btn-primary" %>
      <%= link_to "#{t "html.back" }", rate_codes_path, class: "btn" %>
  </div>
<% end %>


<div class="page-header">
  <h3><%= raw("#{t "activemodel.models.user"}") %></h3>
</div>
<div class="well" ><%= link_to t("html.add"), new_user_path, class: "btn btn-primary"  %></div>

<center><%= paginate @users %></center>
<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th><%= t("html.full_name")%></th>
      <th><%= t("html.username")%></th>
      <th><%= t("html.roll")%></th>
      <th><%= "#{t("html.menu")}#{t("html.language")}"%></th>
      <th><%= "#{t("html.menu")}"%></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each { |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.username %></td>
      <td><%= roll(user.roll) %></td>
      <td><%= lang(user.lang) %></td>
      <td><%= link_to raw("<i class='icon-edit'></i>#{ t "html.edit"}"), edit_user_path(user), class: "btn" %></td>
    </tr>
    <% } %>
  </tbody>
</table>




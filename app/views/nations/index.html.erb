<div class="page-header">
  <h3><%= raw("#{t "activemodel.models.nation"}") %></h3>
</div>
<div class="well" ><%= link_to t("html.add"), new_nation_path, class: "btn btn-primary"  %></div>
<center><%= paginate @nations %></center>
<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th><%= raw("#{t "activemodel.attributes.nation.name"}") %></th>
      <th><%= raw("#{t "activemodel.attributes.nation..used"}") %></th>
      <th><%= "#{t("html.menu")}"%></th>
    </tr>
  </thead>
<% @nations.each do |nation| %>
  <tr>
    <td><%= nation.name %></td>
    <td><%= used(nation.used) %></td>
    <td><%= link_to raw("<i class='icon-edit'></i>#{ t "html.edit"}"), edit_nation_path(nation), class: "btn" %></td>
  </tr>
<% end %>
</table>
<div class="page-header">
  <h3><%= raw("#{t "activemodel.models.contact"}") %></h3>
</div>
<div class="well" >
  <div style="float: left;">
    <%= link_to t("html.add"), new_contact_path, class: "btn btn-primary"  %>
  </div>
  <div style="float: right;">
    <form class="form-inline">
      <input type="text" name="q" value="<%= params[:q] %>" placeholder="<%= "#{t("html.contact")}" %>" >
      <input type="submit" value="<%= "#{t("html.confirm")}" %>" class="btn btn-primary">
    </form>
    

  </div>
  <div style="clear: both;"></div>
</div>
<center><%= paginate @contacts %></center>
<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th><%= raw("#{t "activemodel.attributes.contact.name"}") %></th>
      <th><%= raw("#{t "activemodel.attributes.contact..tel"}") %></th>
      <th><%= raw("#{t "activemodel.attributes.contact..address"}") %></th>
      <th><%= "#{t("html.menu")}"%></th>
    </tr>
  </thead>
<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.tel %></td>
    <td><%= contact.address %></td>
    <td><%= link_to raw("<i class='icon-edit'></i>#{ t "html.edit"}"), edit_contact_path(contact), class: "btn" %></td>
  </tr>
<% end %>
</table>
<%= simple_form_for(@contact, :html => {:class => 'form-horizontal' }) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cid %>
    <%= f.input :tel%>
    <%= f.input :address, input_html: {style: "width: 90%;height:80px"} %>
  </div>

  <div class="form-actions">
    <%= f.submit (@contact.new_record? ? "#{t "html.save"}"  : "#{t "html.update"}" ), class: "btn btn-primary" %>
      <%= link_to "#{t "html.back" }", contacts_path, class: "btn" %>
  </div>
<% end %>
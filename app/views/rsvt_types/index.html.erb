<div class="page-header">
  <h3><%= raw("#{t "activemodel.models.rsvt_type"}") %></h3>
</div>
<div class="well" ><%= link_to t("html.add"), new_rsvt_type_path, class: "btn btn-primary"  %></div>
<center><%= paginate @rsvt_types %></center>
<table class="table table-hover table-bordered table-striped">
  <thead>
    <tr>
      <th><%= raw("#{t "activemodel.attributes.rsvt_type.name"}") %></th>
      <th><%= raw("#{t "activemodel.attributes.rsvt_type..used"}") %></th>
      <th><%= "#{t("html.menu")}"%></th>
    </tr>
  </thead>
<% @rsvt_types.each do |rsvt_type| %>
  <tr>
    <td><%= rsvt_type.name %></td>
    <td><%= used(rsvt_type.used) %></td>
    <td><%= link_to raw("<i class='icon-edit'></i>#{ t "html.edit"}"), edit_rsvt_type_path(rsvt_type), class: "btn" %></td>
  </tr>
<% end %>
</table>
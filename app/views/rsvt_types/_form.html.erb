<%= simple_form_for(@rsvt_type, :html => {:class => 'form-horizontal' }) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :used, :wrapper => :append   do %>
      <%= f.check_box :used, {},'1','0'  %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.submit (@rsvt_type.new_record? ? "#{t "html.save"}"  : "#{t "html.update"}" ), class: "btn btn-primary" %>
      <%= link_to "#{t "html.back" }", rsvt_types_path, class: "btn" %>
  </div>
<% end %>